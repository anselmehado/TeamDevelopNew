<!DOCTYPE html>
<html>
  <head>
    <title>ProjetHard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>



    <nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <span class="navbar-text">
      Navbar text with an inline element
    </span>
  </div>
</nav>
  </head>

  <body>

    <div>
      <% if logged_in? %>
        <div class="menu">
        <i class="fas fa-home"></i> <%= link_to "Home", tasks_path,  class: "link" %> |


        <%= link_to 'Change profil', edit_user_path(current_user.id), class: "link" %> |
        <%= link_to 'My page', user_path(current_user.id), class: "link" %> |
        <%= link_to "Logout", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "Sign up", new_user_path %> |
        <%= link_to "Login", new_session_path %>
      </div>
      <% end %>
      <% if logged_in  && current_user.admin =='true'  %>
        <%= link_to 'Gestion des tasks', admin_users_path, class: "link" %> |

      <% end %>
    </div>

  <%= yield%>

  </body>
</html>
